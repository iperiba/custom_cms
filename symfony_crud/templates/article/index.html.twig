{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Slug</th>
                <th>Categories</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.slug }}</td>
                <td>
                    {% for category in article.categories %}
                        <a href="{{ path('app_article_show', {'slug': category}) }}" title="{{ category }}">{{ category }}</a>
                    {% endfor %}
                </td>
                <td>{{ article.content|length > 50 ? article.content|slice(0, 50) ~ '...' : article.content }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'slug': article.slug}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
